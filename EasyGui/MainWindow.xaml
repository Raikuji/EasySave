<Window x:Class="EasyGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyGui"
        xmlns:ViewModels="clr-namespace:EasyGui.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="ThreeDBorderWindow" Background="White">

    <Window.DataContext>
        <ViewModels:MainWindowViewModel x:Name="ViewModel"/>
    </Window.DataContext>
    <DockPanel x:Name="TopDock" Margin="0,0,0,0" >
        <Menu DockPanel.Dock="Top" Focusable="False" >
            <MenuItem Header="{Binding FileDockMain}" IsTabStop="False">
                <MenuItem Header="{Binding SettingsMain}" />
                <MenuItem Header="{Binding QuitDockMain}" Command="{Binding CloseApplicationCommand}"/>
            </MenuItem>
        </Menu>
        <Menu DockPanel.Dock="Left" Background="#FFF6F6F6" ScrollViewer.CanContentScroll="True" Width="105" Visibility="Visible">
            <MenuItem Header="{Binding ListMenuMain}" Command="{Binding ChangeViewCommand}" CommandParameter="BackupList"/>
            <MenuItem Header="{Binding AddMenuMain}" Command="{Binding ChangeViewCommand}" CommandParameter="AddBackup"/>
            <MenuItem Header="{Binding SettingsMain}" Command="{Binding ChangeViewCommand}" CommandParameter="Settings"/>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom"
                   Background="LightGray"
                   Height="40">
            <TextBlock Text="{Binding StatusMessage}" Padding="10, 0, 0, 0"/>
        </StatusBar>
        <Frame NavigationUIVisibility="Hidden" Content="{Binding CurrentView}" IsTabStop="False" Navigated="Frame_Navigated_1" />

        <!-- Ajout du StackPanel pour la taille maximale des fichiers -->
        <StackPanel DockPanel.Dock="Top" Margin="10">
            <Label Content="Taille maximale des fichiers (en Ko):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
            <TextBox Name="MaxFileSizeTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" Width="200"/>
            <Button Content="Sauvegarder" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,40,0,0" Width="100" Click="SaveMaxFileSize_Click"/>
        </StackPanel>
    </DockPanel>
</Window>
