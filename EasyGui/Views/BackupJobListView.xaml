<Page x:Class="EasyGui.Views.BackupJobListView"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
   xmlns:local="clr-namespace:EasyGui.Views"
   xmlns:ViewModels="clr-namespace:EasyGui.ViewModels" d:DataContext="{d:DesignInstance Type=ViewModels:BackupJobListViewModel}"
   mc:Ignorable="d" 
   d:DesignHeight="450" d:DesignWidth="750">
	<Page.DataContext>
		<ViewModels:BackupJobListViewModel x:Name="ViewModel"/>
	</Page.DataContext>
	<Grid Background="White">
		<DockPanel x:Name="TopDock" Margin="0,0,0,0" >
			<ListView x:Name="BackupJobList" ItemsSource="{Binding BackupJobs}" IsSynchronizedWithCurrentItem="True" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalAlignment="Left" MaxWidth="600">
				<ListView.View>
					<GridView>
						<GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
						<GridViewColumn Header="Source" DisplayMemberBinding="{Binding Source}"/>
						<GridViewColumn Header="Destination" DisplayMemberBinding="{Binding Destination}"/>
						<GridViewColumn Header="Type" DisplayMemberBinding="{Binding Strategy}"/>
					</GridView>
				</ListView.View>
			</ListView>
			<Menu DockPanel.Dock="Right" Background="#FFF6F6F6" ScrollViewer.CanContentScroll="True" Width="60" Visibility="Visible" HorizontalAlignment="Right" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Top">
				<MenuItem Header="Execute" Command="{Binding ExecuteBackupJobCommand}" CommandParameter="{Binding SelectedItem, ElementName=BackupJobList}"/>
				<MenuItem Header="Edit" Command="{Binding UpdateBackupJobCommand}" CommandParameter="{Binding SelectedItem, ElementName=BackupJobList}"/>
				<MenuItem Header="Delete" Command="{Binding DeleteBackupJobCommand}" CommandParameter="{Binding SelectedItem, ElementName=BackupJobList}"/>
			</Menu>
		</DockPanel>
	</Grid>
</Page>