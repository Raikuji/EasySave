<Page x:Class="EasyGui.Views.SettingsView"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:EasyGui.Views"
      xmlns:ViewModels="clr-namespace:EasyGui.ViewModels" d:DataContext="{d:DesignInstance Type=ViewModels:SettingsViewModel}"
	  mc:Ignorable="d" 
	  d:DesignHeight="450" d:DesignWidth="800"
	  Title="SettingsView">
    <Page.DataContext>
        <ViewModels:SettingsViewModel x:Name="ViewModel"/>
    </Page.DataContext>
    <Grid>
        <GroupBox Header="Log Format" Margin="10, 10, 0, 0" Height="80" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel>
                <RadioButton x:Name="LogFormatJson" Content="JSON" IsChecked="{Binding LogFormatJson}" Margin="10, 10, 0, 0"/>
                <RadioButton x:Name="LogFormatXml" Content="XML" IsChecked="{Binding LogFormatXml}" Margin="10, 10, 0, 0"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Language" Margin="10, 100, 0, 0" Height="80" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel>
                <RadioButton x:Name="LanguageEnglish" Content="English" IsChecked="{Binding LanguageEnglish}" Margin="10, 10, 0, 0"/>
                <RadioButton x:Name="LanguageFrench" Content="French" IsChecked="{Binding LanguageFrench}" Margin="10, 10, 0, 0"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
