<Window x:Class="EasySaveClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Console Déportée" Height="300" Width="400">
    <Grid>
        <TextBlock Name="StatusText" Text="Connexion en cours..." 
                   VerticalAlignment="Top" HorizontalAlignment="Center"
                   FontSize="16" Margin="10"/>

        <Button Content="Pause" Click="Pause_Click" Width="80" Height="30" 
                VerticalAlignment="Bottom" Margin="10,0,300,20"/>
        <Button Content="Play" Click="Play_Click" Width="80" Height="30" 
                VerticalAlignment="Bottom" Margin="150,0,150,20"/>
        <Button Content="Stop" Click="Stop_Click" Width="80" Height="30" 
                VerticalAlignment="Bottom" Margin="300,0,10,20"/>
    </Grid>
</Window>
